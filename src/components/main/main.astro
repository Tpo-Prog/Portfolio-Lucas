---
import style from "../../styles/main.module.css";

const linkedinIcon = "./linkedin.svg";
const githubIcon = "./github.svg";
const mailIcon = "./mail.svg";
const whatsappIcon = "./whatsapp.svg";
---

<div id="container-home" class=`${style.container_home}`>
  <div id="container-description-home" class=`${style.container_text}`>
    <h1 data-aos="fade-right" data-aos-delay="400" data-aos-duration="1000">
      Hello! My name is Lucas Montenegro
    </h1>
    <h2 data-aos="flip-right" data-aos-delay="1000" data-aos-duration="2500">
      Web developer <span>Front-End/Back-end</span>
    </h2>
    <div id="container-social-list-home" class=`${style.container_social_list}`>
      <ul
        id="social-list-icons"
        data-aos="fade-left"
        data-aos-delay="1800"
        data-aos-duration="1800"
        class=`${style.social_list_icons}`
      >
        <li>
          <a href="https://www.linkedin.com/in/lucas-gabriel-montenegro-813068373" target="_blank"
            ><img
              class=`${style.icon}`
              src={linkedinIcon}
              alt="icone de rede social linkedin"
            /></a>
        </li>
        <li>
          <a href="https://github.com/Tpo-Prog" target="_blank"
            ><img
              class=`${style.icon}`
              src={githubIcon}
              alt="icone de rede social github"
            /></a>
        </li>
        <li>
          <a href="montenegrolucas767@gmail.com"
            ><img
              class=`${style.icon}`
              src={mailIcon}
              alt="icone de email"
            /></a>
        </li>
        <li>
          <a href="wa.link/583id6" target="_blank"
            ><img
              class=`${style.icon}`
              src={whatsappIcon}
              alt="icone do whatsapp"
            /></a>
        </li>
      </ul>
    </div>
    <div class=`${style.container_arrow}`>
      <img
        data-aos="fade-up"
        data-aos-delay="1700"
        src="arrowdown.svg"
        class="w-3"
        alt="seta indicadora para baixo"
      />
    </div>
  </div>
</div>
