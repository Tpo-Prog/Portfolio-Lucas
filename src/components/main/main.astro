---

import style from '../../styles/main.module.css'

const describe = ["Seja muito bem vindo !", "Sou o Lucas Dantas", "Desenvolvedor Web", " Front End"];
const linkedinIcon = "./linkedin.svg";
const githubIcon = "./github.svg";
const mailIcon = "./mail.svg"
const whatsappIcon = "./whatsapp.svg";

---

<div id="container-home" class="container mx-auto flex flex-col justify-center ">
    <div id="container-describe-home" class=`${style.container_text} py-16 xl:py-36 particle`>
            <h2 class="text-2xl lg:text-3xl xl:text-4xl 2xl:text-5xl">{describe[1]}</h2>
            <h3 class="text-4xl lg:text-6xl xl:text-6xl 2xl:text-7xl">{describe[2]}<span>{describe[3]}</span></h3>
    </div>
    <div id="container-social-list-home" class="flex self-end">
        <ul id="social-list-icons" class=`{style.social_list_icons} flex`>
            <li><a href="https://www.linkedin.com/in/dantsc/" target="_blank"><img class=`${style.icon}` src={linkedinIcon} alt="icone de rede social linkedin"></a></li>
            <li><a href="https://github.com/ldantsc" target="_blank"><img class=`${style.icon}` src={githubIcon} alt="icone de rede social github"></a></li>
            <li><a href="mailto:dants.dev@gmail.com"><img class=`${style.icon}` src={mailIcon} alt="icone de email"></a></li>
            <li><a href="https://wa.link/wr4vt8" target="_blank"><img class=`${style.icon}` src={whatsappIcon} alt="icone do whatsapp"></a></li>
        </ul>
    </div>
</div>