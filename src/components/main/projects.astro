---

import ProjectsCard from '../projects-card/projects-card.jsx'
/* API PUBLICA DO GITHUB */
const response = await fetch('https://api.github.com/users/ldantsc/repos')
const userData = await response.json()
/* Filtrando o json para trazer apenas os repositórios que não tenha a tag study-notes */
/* Após devolver o array filtrado para newArr, utilizar o map para percorrer o json */
const newArr = userData.filter((data) => {
    if(!data.topics.includes("study-notes")){
        return data
    }
})
---

<div id="container-projects">
    <div id="container-projects-title">
        <h2 class="title">Meu projetos</h2>
    </div>
    <div id="container-projects-card" class="flex flex-wrap gap-3">
        {newArr.map((data) => {
            return (
                <ProjectsCard title={data.name} description={data.description} url={data.html_url} client:only/>
            )
        })}
    </div>
    <div>
        <p class="italic text-end">Aguarde para mais projetos futuros...</p>
    </div>
</div>